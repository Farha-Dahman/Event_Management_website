@page

@model EventManagement_Application.Pages.Admin.Roles.UserRolesModel
@{
	ViewData["Title"] = "Users";
}

<table class="table table-striped mt-4">
	<thead>
		<tr class="bg-primary text-white">
			<th>First Name</th>
			<th>Last Name</th>
			<th>User Name</th>
			<th>Email</th>
			<th>Roles</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model.Users){
			<tr>
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.UserName</td>
				<td>@user.Email</td>
				<td>@string.Join(" , ", user.Roles)</td>
				<td>
					<a class="btn btn-primary" asp-page="/Admin/Roles/ManageRoles" asp-route-userId="@user.Id">Manage Roles</a>
				</td>
			</tr>
		}
	</tbody>
</table>
