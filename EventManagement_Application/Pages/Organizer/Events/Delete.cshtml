@page
@model EventManagement_Application.Pages.Organizer.Events.DeleteModel
@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>

<h3>Are you sure you want to delete this event?</h3>
<div>
    <h4>@Model.Event.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Event.Description</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Event.Date.ToString("yyyy-MM-dd HH:mm")</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Event.Location</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Event.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>