@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5 mb-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-custom text-white text-center">
            <h2 class="mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <p class="text-muted text-center">Last Updated: February 2025</p>

            <div class="accordion" id="privacyAccordion">
                <!-- Data Collection -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button text-custom" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            📊 Data Collection
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#privacyAccordion">
                        <div class="accordion-body">
                            We collect personal information, including your name, email, and interactions with our website. This helps us enhance our services and provide a better user experience.
                        </div>
                    </div>
                </div>

                <!-- Data Usage -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed text-custom" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            🔍 How We Use Your Data
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#privacyAccordion">
                        <div class="accordion-body">
                            Your data is used to improve our website, provide customer support, and personalize your experience. We do not sell or share your personal information with third parties.
                        </div>
                    </div>
                </div>

                <!-- Cookies -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed text-custom" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            🍪 Cookies and Tracking
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#privacyAccordion">
                        <div class="accordion-body">
                            We use cookies to analyze website traffic and optimize performance. You can disable cookies through your browser settings.
                        </div>
                    </div>
                </div>

                <!-- Security -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFour">
                        <button class="accordion-button collapsed text-custom" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                            🔒 Data Security
                        </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#privacyAccordion">
                        <div class="accordion-body">
                            We implement strong security measures to protect your personal data from unauthorized access or breaches.
                        </div>
                    </div>
                </div>

                <!-- Contact -->
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingFive">
                        <button class="accordion-button collapsed text-custom" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                            📞 Contact Us
                        </button>
                    </h2>
                    <div id="collapseFive" class="accordion-collapse collapse" aria-labelledby="headingFive" data-bs-parent="#privacyAccordion">
                        <div class="accordion-body">
                            If you have any questions about this policy, contact us at:
                            <ul class="list-unstyled mt-2">
                                <li><i class="fas fa-envelope"></i> Email: support@example.com</li>
                                <li><i class="fas fa-phone"></i> Phone: +1 234 567 890</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Back to Home Button -->
            <div class="text-center mt-4">
                <a asp-page="/Index" class="btn btn-custom"><i class="bi bi-arrow-left"></i> Back to Home</a>
            </div>
        </div>
    </div>
</div>