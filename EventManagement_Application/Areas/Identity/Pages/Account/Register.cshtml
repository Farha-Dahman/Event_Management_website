@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid m-4">
    <div class="row justify-content-center align-items-center min-vh-100">
        <!-- Image Section -->
        <div class="col-sm-12 col-md-6 col-lg-6">
            <img src="~/images/SignUp-image.png" alt="Register Image" class="SignUp-image w-100" />
        </div>

        <!-- Form Section -->
        <div class="col-sm-12 col-md-8 col-lg-6 mt-5">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-100 mx-auto login-form w-50 mx-3 mb-4 border border-dark-subtle p-4 rounded shadow">
                <h2 class="mb-4 fw-bold text-center">Create a New Account</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.FirstName" class="form-label">First Name</label>
                    <input asp-for="Input.FirstName" class="form-control border border-dark-subtle" placeholder="Enter your first name" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.LastName" class="form-label">Last Name</label>
                    <input asp-for="Input.LastName" class="form-control border border-dark-subtle" placeholder="Enter your last name" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" class="form-control border border-dark-subtle" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.DateOfBirth" class="form-label">Date of Birth</label>
                    <input asp-for="Input.DateOfBirth" type="date" class="form-control border border-dark-subtle" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" type="password" class="form-control border border-dark-subtle" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control border border-dark-subtle" placeholder="Confirm your password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="bg-primary-color border-0 my-4 btn-lg fw-bold text-white w-75">Register</button>
                </div>

                <div class="text-start">
                    <p class="mb-1">Already have an account? <a asp-page="./Login" class="text-dark text-decoration-none">Log in</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
